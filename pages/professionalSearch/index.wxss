/* pages/professionalSearch/index.wxss */
@import '/assets/iconfont/iconfont.wxss';
.wrapper{
  width:710rpx;
  margin:0 auto;
}
.head{
  width:82%;
  margin:0 auto;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  height: 46rpx;
  line-height: 46rpx;
  margin-top: 12rpx;
}
.soft-kind{
  color:#929292;
  font-size: 22rpx;
  background-color: #eeeeee;
  width:90rpx;
  padding-left: 18rpx;
  border-radius: 20rpx;
  position: relative;
}
.soft-kind .icon-box{
  transform: rotate(90deg);
  position: absolute;
  right:18rpx;
  top:0;
}
.soft-kind .icon-box .iconfont{
  color:#9f9f9f;
}
.head .title{
  color:#d499b9;
  font-size: 34rpx;
  position: relative;
  padding-right:45rpx;
}
.head .sumNum{
  font-size: 22rpx;
  color:#929292;
}
.listData{
  width:100%;
  margin-top: 27rpx;
}
.listData .title{
  font-size: 26rpx;
  color:#9055a2;
}
.scroll-box{
  margin-top: 40rpx;
}
.list-item{
  width:100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  margin-top: 40rpx;
}
.list-item:first-child{
  margin-top: 0rpx;
}
.list-item .left{
  width:180rpx;
  height:206rpx;
  
}
.list-item .left image{
  width:180rpx;
  height:206rpx;
}
.list-item .right{
  margin-left: 30rpx;
  flex: 1;
}
.list-item .right{
  flex: 1;
  margin-left: 30rpx;
  flex-direction:column;
  position: relative;
}
.list-item .right .bookName{
  color:#333333;
  font-size: 30rpx;
}
.bookAddress{
  margin-top: 30rpx;
}
.bookKuchun{
  margin-top:15rpx;
}
.bookAddress,.bookKuchun{
  color:#929292;
  font-size: 22rpx;
}
.bookFunction{
  position: absolute;
  bottom:0rpx;
  left: 0;
  display:none;
}
.bookFunction .iconfont,.content{
  display: inline-block;
  color:#cacaca;
  font-size: 22rpx;
}
.bookFunction .iconfont{
  font-size: 40rpx;
  vertical-align: middle;
  margin-right: 5rpx;
}
.list-item{
  padding-bottom: 28rpx;
  border-bottom:1rpx solid #eeeeee;
}

.on{
  color:#ffa800;
}
.soft-kind{
  visibility: hidden;
}
.van-ellipsis{
  font-size: 24rpx;
  color:#929292;
}
.van-tabs__line{
  height: 2px!important;
}
.van-tabs--line .van-tabs__wrap{
  height:30px!important;
}
.van-tab{
  line-height: 35px!important;
}
.icon-you1{
  font-size: 60rpx;
  color:#d499b9;
  font-weight: 500; 
  position: absolute;
  right:0rpx;
  top:50%;
  transform: translateY(-50%);
}







.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 8;
  background: rgba(0, 0, 0, 0.6);
}

.state-item {
  width: 20%;
  height: 70rpx;
  font-size: 11pt;
  line-height: 70rpx;
  text-align: center;
  border-radius: 10rpx;
  border: 2rpx solid #ddd;
}

.border.state-item {
  border: 2rpx solid #c4245c;
}

.date {
  min-width: 40%;
  display: flex;
  font-size: 11pt;
  color: #bdbdbd;
  align-items: center;
}

.date-btn {
  min-width: 80%;
  font-size: 12pt;
  background-color: #c4245c;
  color: #fff;
  position: fixed
}


.picker-view {
  width: 100%;
  display: flex;
  z-index:12;
  background-color: #fff;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  height: 40vh;
}

.picker-item {
  line-height: 70rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  text-align: center;
}

.fakePicker-box{
  width:460rpx;
  height:40rpx;
  line-height: 40rpx;
  text-align: center;
  position: absolute;
  left:50%;
  top:145%;
  transform: translateX(-50%);
  background-color: #c88db5;
  z-index: 9;
  opacity: 0;
}

.picker-head{
  width:100%;
  height:80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #ccc;
}