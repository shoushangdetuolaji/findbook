/* pages/detail/index.wxss */
@import '/assets/iconfont/iconfont.wxss';
.nav{
  background-color: #fff;
  box-shadow:0px 0rpx 20rpx #e8e8e8;
}
.title_text{
  color:#000;
  font-weight: 500;
}
.container{

}

.wrapper{
  width: 670rpx;
  margin:0 auto;
}
.book-card{
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  height: 304rpx;
}
.book-card .left{
  width:218rpx;
  height: 304rpx;
  box-shadow:2rpx 2rpx 5rpx #929292;
  border-radius: 8rpx;
}
.book-card .left .detail-cover{
  width:218rpx;
  height: 304rpx;
}
.book-card .right{
  margin-left: 33rpx;
  position: relative;
  flex: 1;
}
.book-card .right .book-name{
  font-size: 30rpx;
  margin-bottom: 45rpx;
}
.book-card .right .book-bianhao,.book-writer,.book-desc,.book-publish{
  color:#929292;
  font-size: 22rpx;
}
.book-desc{
  /* display: none; */
  position: absolute;
  bottom: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.book-desc-all{
  color:#929292;
  font-size: 22rpx;
  margin-top: 60rpx;
}
.book-desc-more{
  color:#9055a2;
  font-size: 22rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}
.leastNum{
  color:#929292;
  font-size: 22rpx;
  margin-top: 37rpx;
}
.book-function{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-content: center;
  justify-content: space-between;
  margin-top: 39rpx;
}

.item-function{
  height: 80rpx;
  background-color: #e6bfd5;
  color:#fff;
  font-size: 22rpx;
  line-height: 80rpx;
  border-radius: 17rpx;
  padding: 0 35rpx;
}
.item-function .iconfont{
  font-size: 36rpx;
  vertical-align: middle;
  margin-right: 17rpx;
}
.similar-tip{
  font-size: 24rpx;
  color:#999999;
  text-align: center;
  margin-top: 60rpx;
  margin-bottom: 58rpx;
}
.similar-item{
  color:#864c98;
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 35rpx;
}
/* .similar-item:last-child{
  margin-bottom:0;
} */
.noInventory{
  background-color:#d2c6cd;
}

