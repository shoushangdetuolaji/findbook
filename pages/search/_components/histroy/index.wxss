/* pages/search/_components/histroy/index.wxss */
@import "/assets/iconfont/iconfont.wxss";
.history-box{
  width:710rpx;
  margin:0 auto;
}

.history-title{
  margin-top: 35rpx;
  position: relative;
  color:#333333;
  font-size: 24rpx;
}
.icon-shanchu{
  position: absolute;
  right: 0;
  color:#333333;
}
.card-box{
  display: flex;
  flex-direction: row;
  margin-top: 5rpx;
  flex-wrap: wrap;
}
.card{
  padding: 10rpx 15rpx;
  border-radius: 8rpx;
  background-color: #fff;
  margin-right: 16rpx;
  color:#333333;
  font-size: 24rpx;
  border:1rpx solid #929292;
  margin-top: 22rpx;
}
.tapColor{
  background-color:#eeeeee;
  border-color: #eeeeee;
}
.card:last-child{
  margin-right: 0rpx;
}