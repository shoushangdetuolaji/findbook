/* pages/search/index.wxss */
@import '/assets/iconfont/iconfont.wxss';
page{

}
.nav_goback{
  position: absolute;
}
.container{
  position: relative;
  width:710rpx;
  margin:0 auto;
}
.noDataShow,.noSearchShow{
  text-align: center;
  position: absolute;
  left:50%;
  top:45%;
  transform: translate(-50%,-45%);
}
.noSearchShow image{
  width:130rpx;
  height:130rpx;
}
.icon-wusousuo-{
  font-size: 130rpx;
}
.icon-kong{
  font-size: 130rpx;
  color:#333;
}
.noDataShow,.noSearchShow .txt{
  text-align: center;
  font-size: 28rpx;
}
.search-box{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  width:100%;
  margin-top: 27rpx;
}
.picker-kind{
  /* width: 108rpx; */
  padding-right: 40rpx;
  height: 61rpx;
  line-height: 61rpx;
  background-color: #dddddd;
  border-radius: 25rpx;
  font-size: 26rpx;
  position: relative;
}
.picker-kind .picker-kind-txt{
  padding-left: 20rpx;
}
.picker-kind .picker-icon{
  transform: rotate(90deg);
  position: absolute;
  right:5rpx;
  top:-1rpx;
}
.picker-kind .picker-icon .iconfont icon-you1{
  font-weight: 300;
}
.search-input-box{
  height: 61rpx;
  flex:1;
  background-color: #dddddd;
  border-radius: 25rpx;
  margin-left: 8rpx;
  position: relative;
}
.search-input-box .search{
  height: 61rpx;
  line-height: 61rpx;
  color:#000;
  font-size: 26rpx;
  padding-left: 35rpx;
  width:80%;
}
.search-input-box .icon-guanbi-{
  position: absolute;
  right:16rpx;
  top:12rpx;
  color:#fff;
  z-index: 99;
}
.btn-search{
  height: 61rpx;
  width: 90rpx;
  line-height: 61rpx;
  font-size: 26rpx;
  border-radius: 25rpx;
  background-color: #dddddd;
  text-align: center;
  margin-left: 7rpx;
}
.alldata-box{
  width: 710rpx;
  margin:0 auto;
  margin-top: 26rpx;
}
.professional-box{
  border-bottom: 1rpx solid #eeeeee;
  padding-bottom: 28rpx;
}

.card{
  background-color: #fff;
  font-size: 26rpx;
  color:#9055a2;
  border:1rpx solid #9f4dea;
  border-radius: 10rpx;
  padding: 18rpx 22rpx;
  margin-right: 40rpx;
  margin-top: 23rpx;
}
.card:last-child{
  margin-right: 0rpx;
}
.changeBack{
  background-color: #bc99c7;
  color:#9055a2;
  border:1rpx solid #9950c9;
}
.item-box{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  margin-top: 25rpx;
}
.item-box .left{
  width:180rpx;
  height:206rpx;
  box-shadow:2rpx 2rpx 5rpx #cacaca;
}
.item-box .left image{
  width:180rpx;
  height:206rpx;
}
.item-box .right{
  flex: 1;
  margin-left: 30rpx;
  flex-direction:column;
  position: relative;
}
.item-box .right .bookName{
  color:#333333;
  font-size: 30rpx;
}
.bookFunction{
  position: absolute;
  bottom:0rpx;
  left: 0;
}
.bookAddress{
  margin-top: 30rpx;
}
.bookKuchun{
  margin-top:15rpx;
}
.bookAddress,.bookKuchun{
  color:#929292;
  font-size: 22rpx;
}
.bookFunction .iconfont,.content{
  display: inline-block;
  color:#cacaca;
  font-size: 22rpx;
}
.bookFunction .iconfont{
  font-size: 40rpx;
  vertical-align: middle;
  margin-right: 5rpx;
}
.item-box{
  padding-bottom: 28rpx;
  border-bottom:1rpx solid #eeeeee;
}
.scroll-box{
  margin-top: 10rpx;
  position: relative;
}
.scroll-shadow{
  height:5rpx;
  width:100%;
  position: fixed;
  top:0;
  box-shadow:0rpx 2rpx 5rpx #929292;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.card-box{
  width: 710rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}